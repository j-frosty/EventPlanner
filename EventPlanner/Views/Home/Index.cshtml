@model IEnumerable<EventPlanner.Models.Event>
@{
    ViewBag.Title = "Home Page";
}

<ul class="events">
    @foreach (var Event in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @Event.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @Event.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @Event.Artist.Name
                </span>
                <span class="genre">
                    @Event.Genre.Name
                </span>
            </div>
        </li>
    }
</ul>